{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http:/www.kalisio.xyz/schemas/organisations.update-billing#",
  "title": "Organisation Billing",
  "description": "Organisation billing perspective",
  "type": "object",
  "properties": {
    "plan": {
      "type": "string",
      "field": {
        "component": "form/KSelectField",
        "label": "Plan",
        "helper": "Select your plan",
        "options": [
          { "label": "Gold", "value": "gold", "color": "yellow" },
          { "label": "Silver", "value": "silver", "color": "grey" },
          { "label": "Bronze", "value": "bronze", "color": "amber" }
        ]
      }
    }
  },
  "required": ["plan"]
}

