{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/organisations.update.json#",
  "title": "Organisation Edition",
  "description": "Organisation edition schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "field": {
        "component": "form/KTextField",
        "label": "Name",
        "helper": "Enter the name"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "field": {
        "component": "form/KTextField",
        "label": "Description",
        "helper": "Enter the description"
      }
    }
  },
  "required": ["name", "description"]
}

