{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://mynet.com/schemas/groups-update.json#",
  "title": "Group Edition",
  "description": "Group edition schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "field": {
        "component": "form/KTextField",
        "label": "Name",
        "helper": "Enter the name"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "field": {
        "component": "form/KTextField",
        "label": "Description",
        "helper": "Enter the description"
      }
    },
    "tags": { 
      "type": "array",
      "scope": "groups",
      "field": {
        "component": "form/KTagField",
        "label": "Tags",
        "helper": "Set some tags"
      }
    }
  },
  "required": ["name"]
}

