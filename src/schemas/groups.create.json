{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://mynet.com/schemas/groups-create.json#",
  "title": "Group Creation",
  "description": "Group creation schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "default": "New group",
      "field": {
        "component": "form/KTextField",
        "label": "Name",
        "helper": "Type the group name"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "minLength": 3,
      "field": {
        "component": "form/KTextareaField",
        "label": "Description",
        "helper": "Type the group description"
      }
    },
    "tags": { 
      "type": "array",
      "scope": "group",
      "field": {
        "component": "form/KTagField",
        "label": "Tags",
        "helper": "Add some tags"
      }
    }
  },
  "required": ["name"],
  "form": {
    "type": "object",
    "properties":  {
      "icon": false,
      "label": true,
      "labelWidth": 3
    }
  }
}

