{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://mynet.com/schemas/orgs-create.json#",
  "title": "Organisation Creation",
  "description": "Organisation creation schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "default": "New group",
      "field": {
        "component": "form/KTextField",
        "label": "Name",
        "helper": "Enter the name"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "field": {
        "component": "form/KTextField",
        "label": "Description",
        "helper": "Enter the description"
      }
    },
    "tags": { 
      "type": "array",
      "scope": "groups",
      "field": {
        "component": "form/KTagField",
        "label": "Tags",
        "helper": "Add some tags"
      }
    }
  },
  "required": ["name"]
}

