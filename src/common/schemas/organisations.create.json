{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/organisations.create.json#",
  "title": "Create a new organisation ?",
  "description": "Organisation creation schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "default": "New organisation",
      "field": {
        "component": "form/KTextField",
        "label": "Name",
        "helper": "Enter the name of your new organisation"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "field": {
        "component": "form/KTextField",
        "label": "Description",
        "helper": "Enter a brief description about your new organisation"
      }
    }
  },
  "required": ["name", "description"]
}

